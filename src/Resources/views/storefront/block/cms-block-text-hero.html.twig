{% block block_text_hero %}
    {% set element = block.slots.getSlot('content') %}
    {% set columns = 1 %}
    
    <div class="col-12" data-cms-element-id="{{ element.id }}">
        {% block block_text_hero_inner %}
            <div class="hero-text-content">
                {{ element.data.content|raw }}
            </div>
        {% endblock %}
    </div>
{% endblock %}
