{% sw_extends '@Storefront/storefront/block/cms-block-image-text.html.twig' %}

{% block block_image_text %}
    {% set benefitsList = [
        block.slots.getSlot('one'), 
        block.slots.getSlot('two'), 
        block.slots.getSlot('three'), 
        block.slots.getSlot('four') 
        ] 
    %}

    <div class="col-md-12 cvp-benefits-list">
        <div class="container">
            <div class="row">
            {% for list in benefitsList %}
                {% block benefits_content %}
                    <div class="col col-md-3 cvp-benefits-list-content">
                        <div class="benefits-icon">
                            <img src={{asset("/bundles/cellvitalplatformtheme/assets/benefits-" ~ list.slot ~ ".svg")}} alt="" />
                        </div>
                        {{ list.data.content|raw }}
                    </div>
                {% endblock %}
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}