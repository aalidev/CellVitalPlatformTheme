{% sw_extends '@Storefront/storefront/element/cms-element-form/form-components/cms-element-form-input.html.twig' %}

{% block cms_element_form_input %}
	<div class="form-group">
		{% block cms_element_form_input_input %}
			<input name="{{ fieldName }}" {% if type %} type="{{ type }}" {% endif %} id="form-{{ fieldName }}" value="{{ data.get( fieldName ) }}" {% if required %} required="required" {% endif %} class="form-control{% if formViolations.getViolations( '/' ~ fieldName ) %} is-invalid{% endif %}"/>

			{% if formViolations.getViolations( '/' ~ fieldName ) is not empty %}
				{% sw_include '@Storefront/storefront/utilities/form-violation.html.twig' with {
                    violationPath: ('/' ~ fieldName)
                } %}
			{% endif %}
		{% endblock %}

		{% block cms_element_form_input_label %}
			<label class="form-label" for="form-{{ fieldName }}">
				{{ label|trans }}
			</label>
		{% endblock %}

		{% block page_checkout_cart_add_promotion_submit %}
			<div class="form-group-discount-send">
				<button type="submit" id="addPromotion">
					<img src={{asset('/bundles/cellvitaltheme/assets/arrow-right.svg') }}>
				</button>
			</div>
		{% endblock %}
	</div>
{% endblock %}
