{% block utilities_offcanvas %}
	{% block utilities_offcanvas_close %}
		<div class="row align-items-center offcanvas-navigation">
			<div class="col js-offcanvas-close">
				<button class="btn">
					{% block utilities_offcanvas_close_icon %}
						{% sw_icon 'x' style { 'size': 'sm' } %}
					{% endblock %}
				</button>
			</div>
			{% block layout_header_logo %}
				<div class="col">
					{% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
				</div>
			{% endblock %}

			{% block navigation_offcanvas_navigation_language %}
				<div class="col offcanvas-language">
					{% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' with {position: 'offcanvas'} %}
				</div>
			{% endblock %}

		</div>
	{% endblock %}

	{% block utilities_offcanvas_content_container %}
		<div class="offcanvas-content-container">
			{% block utilities_offcanvas_content %}{% endblock %}
		</div>
	{% endblock %}
{% endblock %}
